{% if usage == 'framework' %}
  {% set template_namespace = '@phpManufaktur/Basic/Template' %}
  {% set template_file = 'framework/body.twig' %}
{% else %}
  {% set template_namespace = '@phpManufaktur/Event/Template' %}
  {% set template_file = 'admin/body.twig' %}
{% endif %}
{% extends getTemplateFile(template_namespace, template_file) %}
{% block jquery %}
  {{ parent() }}
  <script type="text/javascript" src="{{ MANUFAKTUR_URL }}/CKEditor/Source/ckeditor.js"></script>
{% endblock jquery %}
{% block stylesheet %}
  {{ parent() }}
  <link rel="stylesheet" type="text/css" href="{{ LIBRARY_URL }}/jquery/ui/1.10.3/themes/smoothness/jquery-ui.min.css" />
  <link rel="stylesheet" type="text/css" href="{{ LIBRARY_URL }}/jquery/ui/1.10.3/themes/smoothness/jquery.ui.theme.css" />
  <link rel="stylesheet" type="text/css" href="{{ LIBRARY_URL }}/jquery/timepicker/1.4.3/jquery-ui-timepicker-addon.min.css" />
  {% if fileExists(MANUFAKTUR_PATH ~ '/Event/Template/' ~ FRAMEWORK_TEMPLATES.0 ~ '/css/admin.min.css') %}
    <link rel="stylesheet" type="text/css" href="{{ MANUFAKTUR_URL ~ '/Event/Template/' ~ FRAMEWORK_TEMPLATES.0 ~ '/css/admin.min.css' }}" media="screen, projection" />
  {% else %}
    <link rel="stylesheet" type="text/css" href="{{ MANUFAKTUR_URL ~ '/Event/Template/default/css/admin.min.css' }}" media="screen, projection" />
  {% endif %}
{% endblock stylesheet %}
{% block title %}{{ 'Event Administration - Create or edit event'|trans }}{% endblock %}
  
{% block content %}
  <!-- {{ _self.getTemplateName() }} -->  
  <div class="container">
    {% include '@phpManufaktur/Event/Template/default/admin/toolbar.twig' %}
    
    <h1>{{ 'Daily recurring'|trans }}</h1>
    
    {{ alert }}
    
    {% form_theme form '@phpManufaktur/Event/Template/default/admin/form.fields.horizontal.twig' %}
    
    <form action="{{ FRAMEWORK_URL ~ '/admin/event/recurring/check/day/sequence?usage=' ~ usage }}" role="form" method="post">
      {{ form_widget(form) }}
      
      <div class="form-group">
        <div style="margin-top:15px;" class="col-sm-offset-3 col-sm-6">
          <input type="submit" class="btn btn-default form-control" value="{{ 'Submit'|trans }}" />
        </div>
      </div>
    </form>
  </div>
{% endblock content %}