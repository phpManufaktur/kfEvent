{% extends template_file('@phpManufaktur/Basic/Template', 'kitcommand/iframe.body.twig') %}
{% block title %}{{ event.description_title }}{% endblock %}
{% block description %}{{ event.description_short }}{% endblock %}
{% block stylesheet %}
  {{ parent() }}
  <link rel="stylesheet" type="text/css" href="{{ MANUFAKTUR_URL }}/Event/Template/default/command/css/event.view.small.css" media="screen, projection" />
{% endblock stylesheet %}
{% block content %}
  <div class="event view container">
    <h2>{{ event.description_title }}</h2>
    <div class="event view date">{{ event.event_date_from|date('d.m.Y H:i') }}</div>
    {#<div class="event view description short">{{ parse_command(app, event.description_long) }}</div>#}
    {{ command(app, 'LoremIpsum') }}
  </div>
{% endblock %}

