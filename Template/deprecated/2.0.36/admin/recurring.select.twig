{% if usage == 'framework' %}
  {% set template_namespace = '@phpManufaktur/Basic/Template' %}
  {% set template_file = 'framework/body.twig' %}
{% else %}
  {% set template_namespace = '@phpManufaktur/Event/Template' %}
  {% set template_file = 'admin/body.twig' %}
{% endif %}
{% extends getTemplateFile(template_namespace, template_file) %}
{% block jquery %}
  {{ parent() }}
  <script type="text/javascript" src="{{ MANUFAKTUR_URL }}/CKEditor/Source/ckeditor.js"></script>
{% endblock jquery %}
{% block stylesheet %}
  {{ parent() }}
  <link rel="stylesheet" type="text/css" href="{{ LIBRARY_URL }}/jquery/ui/1.10.3/themes/smoothness/jquery-ui.min.css" />
  <link rel="stylesheet" type="text/css" href="{{ LIBRARY_URL }}/jquery/ui/1.10.3/themes/smoothness/jquery.ui.theme.css" />
  {% if fileExists(MANUFAKTUR_PATH ~ '/Event/Template/' ~ FRAMEWORK_TEMPLATES.0 ~ '/css/admin.min.css') %}
    <link rel="stylesheet" type="text/css" href="{{ MANUFAKTUR_URL ~ '/Event/Template/' ~ FRAMEWORK_TEMPLATES.0 ~ '/css/admin.min.css' }}" media="screen, projection" />
  {% else %}
    <link rel="stylesheet" type="text/css" href="{{ MANUFAKTUR_URL ~ '/Event/Template/deprecated/2.0.36/css/admin.min.css' }}" media="screen, projection" />
  {% endif %}
{% endblock stylesheet %}
{% block title %}{{ 'Event Administration - Create or edit event'|trans }}{% endblock %}
  
{% block content %}
  <!-- {{ _self.getTemplateName() }} -->  
  <div class="container">
    {% include '@phpManufaktur/Event/Template/deprecated/2.0.36/admin/toolbar.twig' %}
    
    <h1>{{ header|trans }}</h1>
    
    {{ alert }}
    
    {% form_theme form '@phpManufaktur/Event/Template/deprecated/2.0.36/admin/form.fields.horizontal.twig' %}
    
    <form action="{{ action }}" role="form" method="post">
      {{ form_widget(form) }}
      <div class="form-group">
        <div class="col-sm-offset-3 col-sm-6">
          <div class="height-15"></div>
          <input type="submit" class="btn btn-default form-control" value="{{ 'Submit'|trans }}" />&nbsp;
          <a href="{{ abort }}" class="btn btn-default" role="button">{{ 'Cancel'|trans }}</a>
        </div>
      </div>
    </form>
  </div>
{% endblock content %}
  
{% block footer_jquery %}
  {{ parent() }}
  <script type="text/javascript" src="{{ LIBRARY_URL }}/jquery/ui/1.10.3/ui/minified/jquery-ui.min.js"></script>    
  <script type="text/javascript" src="{{ LIBRARY_URL }}/jquery/ui/1.10.3/ui/minified/i18n/jquery-ui-i18n.min.js"></script>  
{% endblock footer_jquery %}
  
{% block footer %}
  {{ parent() }}
  <script type="text/javascript">
    if (typeof 'jQuery' !== 'undefined') {
      $(document).ready(function() {
        $('#form_recurring_date_end').datepicker($.datepicker.regional['{{ app.translator.locale }}']);
      });
    }
  </script>
{% endblock footer %}  